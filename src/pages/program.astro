---
import EventCard from "../components/EventCard/EventCard.astro";
import Layout from "../layouts/Layout.astro";
import { getData } from "../util/fetchUtil";

const data = await getData();
---

<Layout title="Knowit Fagseminar Roma 2022" currentPage="Program">
  <main>
    <h2 class="text-center">Program</h2>
    <ul class="w-1/2 m-auto flex flex-col gap-7">
      {
        data.map((slot) => {
          return (
            <EventCard
              id={slot.id}
              userName={slot.fields.userIds ?? ""}
              time={slot.fields.start + "-" + slot.fields.end}
              title={slot.fields.title}
              duration={slot.fields.duration?.toString()}
              href={"/Fagseminar-2022/slot/" + slot.id}
              summary={typeof slot.fields.userIds === "undefined"}
            />
          );
        })
      }
    </ul>
  </main>
</Layout>

