---
export interface Props {
  title: string;
  href: string;
  time: string;
}

const { href, title, time } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <div class="space-x-1 flex justify-between">
      <p>{time}</p>
    </div>
    <p class="text-ellipsis">
      {title}
    </p>
  </a>
  <hr class="border-kflamingo border-[1.5px]" />
</li>
