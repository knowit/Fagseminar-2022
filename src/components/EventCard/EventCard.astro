---
import type { TimeRecord } from "../../models/airtable";
import { getImageUrl, getNiceType, getSpeakerPhoto } from "../../util/util";
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";

export interface Props {
  data: TimeRecord;
  className: String;
}

const { className, data } = Astro.props;
---

<article class={`${className}`}>
  <div class="w-full">
    <slot name="favorite" />
  </div>
  <a href={"/Fagseminar-2022/slot/" + data.id}>
    <figure class="my-1 flex items-center gap-x-2">
      <span class="circle-image">
        <Picture
          class={"m-auto"}
          src={import(`../../pictures/${data.id}.png`)}
          alt=""
          widths={[100, 200]}
          sizes="(max-width: 200px) 100px, 200px"
          formats={["avif", "webp"]}
        />
      </span>
      <figcaption class="font-bold">
        {data.fields.userIds != null ? data.fields.userIds : ""}
      </figcaption>
    </figure>
    <p class="text-clip mb-1">
      {
        data.fields.title.length >= 80
          ? data.fields.title.substring(0, 80) + "..."
          : data.fields.title
      }
    </p>
    <em class="text-kleather not-italic">{getNiceType(data.fields.type)}</em>
  </a>
</article>

<style is:global>
  .circle-image picture,
  .circle-image img,
  .circle-image source {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<style>
  @media (max-width: 768px) {
    figcaption {
      @apply text-lg;
    }

    p {
      @apply text-lg;
    }
  }

  .circle-image {
    display: inline-block;
    border-radius: 50%;
    overflow: hidden;
    width: 50px;
    height: 50px;
  }
</style>
